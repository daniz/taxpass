

<div id="registration-form">

  <h2>אנא הרשם</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {autocomplete: 'off'}) do |f| %>
    <%= devise_error_messages! %>

    <%= f.email_field :email, autofocus: true, placeholder: 'כתובת אימייל' %>

    <%= f.text_field :name, placeholder: 'שם פרטי בעברית', autocomplete: 'off' %>

    <%= f.password_field :password, autocomplete: "off", placeholder: 'סיסמה' %>

    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'אישור סיסמה' %>

    <%= f.phone_field :phone, placeholder: 'טלפון (אופציונלי)' %>

    <div><%= f.submit "הרשם", class: 'button button-blue' %></div>
  <% end %>

</div>
