- @renderPartial = (o) => 
  - prefix = if o.spouse then "spouse_" else ""

  %ul#ii-options
    %li.ii-option.ii-options-employed
      != App.help "checkbox", id: "#{ prefix }employed", model: @
      %label{ for: "employed" }
        שכיר/ה
        %i.fa.fa-fw.fa-check
        %i.fa.fa-fw.fa-briefcase

    %li.ii-option.ii-options-author
      != App.help "checkbox", id: "#{ prefix }author", model: @
      %label{ for: "author" }
        סופר/מרצה/דירקטור
        %i.fa.fa-fw.fa-check
        %i.fa.fa-fw.fa-university

    %li.ii-option.ii-options-stock
      != App.help "checkbox", id: "#{ prefix }stock", model: @
      %label{ for: "stock" }
        השקעתי בבורסה
        %i.fa.fa-fw.fa-check
        %i.fa.fa-fw.fa-bar-chart-o

    %li.ii-option.ii-options-lottery
      != App.help "checkbox", id: "#{ prefix }lottery", model: @
      %label{ for: "lottery" }
        פרסים והגרלות
        %i.fa.fa-fw.fa-check
        %i.fa.fa-fw.fa-trophy

    %li.ii-option.ii-options-pension
      != App.help "checkbox", id: "#{ prefix }pension", model: @
      %label{ for: "pension" }
        אני מקבל קצבה
        %i.fa.fa-fw.fa-check
        %i.fa.fa-fw.fa-shield

    %li.ii-option.ii-options-other
      != App.help "checkbox", id: "#{ prefix }other", model: @
      %label{ for: "other" }
        הכנסות אחרות
        %i.fa.fa-fw.fa-check
        %i.fa.fa-fw.fa-gift

!= App.help "user_name"
סמן מה רלוונטי אליך בשנת
!= App.help "tax_year", @
?

= @renderPartial spouse: no

- if @spouse_name
  .spouse
    ולגבי
    != App.help "spouse_name", @
    
    = @renderPartial spouse: yes
